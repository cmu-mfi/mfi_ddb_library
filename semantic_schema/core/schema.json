{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id":     "https://example.org/semantic-schema/core/schema.json",
  "title":   "Core Metadata Schema",
  "type":    "object",

  "properties": {
    "@context": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "type": "object" }
      ]
    },

    "project_id": {
      "type":   "string",
      "format": "uri",
      "description": "Unique project IRI (e.g. urn:uuid:â€¦)"
    },

    "trial_id": {
      "type":   "string",
      "description": "User-defined trial identifier (not required to be globally unique)"
    },


    "extension": {
      "type":   "string",
      "format": "uri",
      "description": "URI of the extension context/schema to apply"
    }
  },

  "required": ["@context","project_id", "trial_id"]
}
